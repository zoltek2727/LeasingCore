@model IEnumerable<LeasingCore.Models.ParamAssortment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ParamAssortmentName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ParamAssortmentBrand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Param)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ParamAssortmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ParamAssortmentBrand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Param.ParamName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParamAssortmentId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParamAssortmentId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParamAssortmentId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
