@model IEnumerable<LeasingCore.Models.Leasing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LeasingStart)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeasingEnd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LeasingExtend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LeasingStart)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeasingEnd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LeasingExtend)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LeasingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LeasingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LeasingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
