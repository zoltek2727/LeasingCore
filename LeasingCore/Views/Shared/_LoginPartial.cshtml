@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-user"></span> @UserManager.GetUserName(User)</a>
                <ul class="dropdown-menu">
                    <li><a asp-area="Identity" asp-page="/Account/Manage/Index">Panel</a></li>
                    <li><a asp-controller="Reports" asp-method="Index">Reports</a></li>
                    <li><a asp-controller="Leasings" asp-method="Index">My Leasings</a></li>
                </ul>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn"><span class="glyphicon glyphicon-log-out"></span> Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register"><span class="glyphicon glyphicon-registration-mark"></span> Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
    </ul>
}
